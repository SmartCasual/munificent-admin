<h1>
  <%= @user.name %>
</h1>

<% if can?(:manage, @user) %>
  <ul class="actions list-unstyled">
    <li><%= link_to "Edit", edit_user_path(@user) %></li>
    <li>
      <%= button_to "Delete", user_path(@user), method: :delete, data: { confirm: "Are you sure?  This cannot be undone." } %>
    </li>
  </ul>
<% end %>

<%= render("munificent/admin/common/record",
  record: @user,
  attributes: %i[
    name
    email_address
  ],
) %>
